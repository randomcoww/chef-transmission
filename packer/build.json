{
  "builders": [
    {
      "type": "docker",
      "image": "phusion/baseimage:latest",
      "commit": "true",
      "run_command": ["-d", "-t", "{{.Image}}", "/sbin/my_init"],
      "volumes": {
        "/etc/chef/secure": "/etc/chef/secure"
      }
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get install -y curl vim git",
        "echo \"{{user `timezone`}}\" > /etc/timezone; dpkg-reconfigure -f noninteractive tzdata"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["cookbooks"],
      "run_list": ["transmission_wrapper::build"],
      "staging_directory": "/etc/chef",
      "config_template": "files/chef_config"
    }
  ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "randomcoww/transmission",
      "force": true,
      "tag": "latest"
    }
  ]
}
