{
  "builders": [
    {
      "type": "docker",
      "image": "phusion/baseimage:latest",
      "commit": "true",
      "run_command": ["-d", "-i", "-t", "{{.Image}}", "/sbin/my_init", "--", "bash", "-l"]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get install -y curl vim git"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["cookbooks"],
      "run_list": ["bind_git::docker"],
      "staging_directory": "/etc/chef",
      "json": {
        "chef_client": {
          "daemon_options": ["-z", "-c", "/etc/chef/solo.rb", "-j", "/etc/chef/node.json"]
        }
      }
    }
  ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "randomcoww/bind",
      "tag": "0.4.8"
    }
  ]
}
